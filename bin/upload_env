#!/usr/bin/env ruby

env_file = File.expand_path('../../.env', __FILE__)
envs = File.read(env_file)
envs.gsub!("\n", ' ')
envs.gsub!('APP_ENV=development', 'APP_ENV=production')
envs.gsub! /MONGODB_URI[^\s]+/, ''
envs.strip!

command = "heroku config:set #{envs}"
puts "[RUN] #{command}"
system command
