#!/usr/bin/env ruby

# Import the production database locally
#
# Warning: this drops the local database first
#
# Usage:
#     bin/dump_production_to_local
#
# TODO: allow Heroku app's name to be passed as an argument

require "uri"
require "mongo"
uri = Mongo::URI.new(`heroku config -a job-tomate | grep MONGODB_URI | awk '{print $2}'`.strip)


def run(cmd)
  puts "[RUN] #{cmd}"
  system cmd
end

cmd = "mongodump -h #{uri.servers.first} -d #{uri.database} -u #{uri.credentials[:user]} -p #{uri.credentials[:password]} -o ./dump"
run cmd

cmd = "mongo job_tomate --eval \"db.dropDatabase()\""
run cmd

cmd = "mongorestore -d job_tomate ./dump/#{uri.database}"
run cmd

cmd = "rm -Rf ./dump"
run cmd
